<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F9F9"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/mainActivityItemLayout">




    <!--Title  -->
    <TextView
    android:layout_alignStart="@+id/listItemNoteBody"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Note Title extra extra extra extra extra long"
    android:id="@+id/listItemNoteTitle"
    android:layout_alignParentTop="true"
    android:ellipsize="end"
    android:singleLine="true"
    android:layout_marginBottom="5dp"
    android:layout_toStartOf="@+id/listItemDate"
    android:fontFamily="sans-serif"


        />

    <!--text block-->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="So this is how our note text should look, it's not pretty but it should do"
    android:id="@+id/listItemNoteBody"
    android:ellipsize="end"
    android:singleLine="true"
    android:layout_below="@+id/listItemNoteTitle"
    android:layout_alignParentStart="true"
    android:layout_marginStart="10dp"
    android:layout_toStartOf="@+id/listItemDate"
    android:fontFamily="sans-serif-light"     />


    <!--date-->
    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="11 Aug"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/listItemDate"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/listItemNoteBody"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="6dp"
        android:fontFamily="sans-serif"/>

</RelativeLayout>
